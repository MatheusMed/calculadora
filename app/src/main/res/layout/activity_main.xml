<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/calculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3 + 4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="-50dp"
            android:textSize="35sp"
            />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3 + 4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="45sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ce"
                android:text="CE"
                android:background="@color/butonColorBold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:height="70dp"
                android:layout_weight="1"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/parentese_abrindo"
                android:text="("
                android:background="@color/butonColorBold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:height="70dp"
                android:layout_weight="1"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/parentese_fechando"
                android:text=")"
                android:background="@color/butonColorBold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisao"
                android:text="/"
                android:background="@color/butonColorBold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:height="70dp"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sete"
                android:text="7"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oito"
                android:text="8"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nove"
                android:text="9"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"

                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplicacao"
                android:text="*"
                android:background="@color/butonColorBold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />

        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/quatro"
                android:text="4"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cinco"
                android:text="5"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seis"
                android:text="6"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menos"
                android:text="-"
                android:background="@color/butonColorBold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />

        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/um"
                android:text="1"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dois"
                android:text="2"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tres"
                android:text="3"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mais"
                android:text="+"
                android:background="@color/butonColorBold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />

        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ponto"
                android:text="."
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:text="0"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />
            <ImageButton
                android:id="@+id/apagar"
                android:src="@drawable/ic_delete"
                android:background="@color/butonColor"
                android:layout_marginLeft="5dp"
                android:contentDescription="icon delete"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="71dp"

                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/igual"
                android:text="="
                android:background="@color/butonColorBold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:height="70dp"
                android:layout_marginTop="10dp"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>